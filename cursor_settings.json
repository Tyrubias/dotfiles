{
    "clangd.path": "/opt/homebrew/opt/llvm/bin/clangd",
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "editor.fontFamily": "'Iosevka', 'Symbols Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.guides.bracketPairs": "active",
    "extensions.ignoreRecommendations": true,
    "gitblame.inlineMessageEnabled": true,
    "terminal.integrated.fontFamily": "'Iosevka Term', 'Symbols Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 16,
    "window.autoDetectColorScheme": false,
    "window.commandCenter": true,
    "workbench.colorTheme": "Dracula Theme",
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.preferredDarkColorTheme": "Dracula Pro",
    "workbench.preferredHighContrastColorTheme": "Cursor Dark High Contrast",
    "workbench.preferredLightColorTheme": "Dracula Pro (Alucard)",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    }
}